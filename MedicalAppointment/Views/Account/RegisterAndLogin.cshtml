@model Core.DTOs.RegisterAndLoginViewModel

@{
    ViewData["Title"] = "RegisterAndLogin";
}




<div class="col-sm-12 p-5" dir="rtl">
    <div class="four-zero-page text-center">
        <div class="col-sm-6 col-sm-offset-3 ">
            <div>
                <div class="text-danger">
                    <b>
                        @ViewData["Message"]
                    </b>
                </div>
                @if (ViewBag.IsSuccess != null)
                {
                    <div class="alert alert-success">
                        <p class="help-block myfont">ورود با موفقیت انجام شد</p>
                    </div>

                    <script>
                        //Your delay in milliseconds
                        var delay = 3000;
                        setTimeout(function() { window.location = "https://localhost:7219/Appointment"; }, delay);
                    </script>
                }
       
            </div>
            <form asp-controller="Account" asp-action="RegisterAndLogin" method="post" class="error-page-search search-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Phone" type="hidden" class="form-control"/>
@*                <input asp-for="Code" type="hidden" class="form-control"/>
*@
                <input asp-for="Code" class="myfont"  />
                <span asp-validation-for="Code" class="text-danger"></span>

                <input asp-for="ConfirmCode" class="myfont" placeholder="کد تایید را وارد کنید"  />
                <span asp-validation-for="ConfirmCode" class="text-danger"></span>
                <input class="btn btn-primary myfont"  style="background:#51a9f1;color:#ffffff" type="submit"value="ورود"/>


            </form>
           <b> <a class="myfont" asp-controller="Account" asp-action="SetPhoneNumber">ویرایش شماره</a></b>
        </div>
    </div>
</div>

